<!-- Include Header -->
<%- include('include/_header') %>
<!-- /Include Header -->

<!-- Main -->
<main id="site-main">
    <div class="container">
        <!-- form handling-->
        <a href="/addapartment" class="btn btn-sm btn-primary">Add Apartment</a>
        <form action="/" method="POST">
            <table class="table">
                <thead class="thread-dark">
                    <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>House Numbers</th>
                    <th>Owner Name</th>
                    <th>Mobile No</th>
                    <th>Location</th>
                    <th>Actions</th>
                    </tr>
                    
                </thead>
                <tbody>
                    <% users.forEach(function(user){ %>
                        <tr>
                            <td><%= user.id %></td>
                            <td><%= user.name %></td>
                            <td><%= user.houseno %></td>
                            <td><%= user.owner %></td>
                            <td><%= user.mobileno %></td>
                            <td><%= user.location %></td>
                            <td>
                                <a href="edit/<%= user.id %>" class="btn border-shadow update">
                                    <span class="text-gradient"><i class="fa fa-pencil-alt"></i></span>
                                </a>
                                <a href="delete/<%= user.id %>" class="btn border-shadow delete">
                                    <span class="text-gradient"><i class="fa fa-times" aria-hidden="true"></i></span>
                                </a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </form>
        <!-- /form handling-->
    </div>
</main>
<!-- /Main -->

<!-- Include Footer -->
<%- include('include/_footer') %>
<!-- /Include Footer -->