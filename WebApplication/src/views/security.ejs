<!-- Include Header -->
<%- include('include/_header') %>
<!-- /Include Header -->
<h3>Security</h3>
<!-- Main -->
<main id="site-main">
    <div class="container">
        
        <!-- form handling-->
        <a href="/addofficer" class="btn btn-sm btn-primary">Add Officer</a>
        <form action="/" method="POST">
            <table class="table">
                <thead class="thread-dark">
                    <tr>
                    <th>Security ID</th>
                    <th>Name</th>
                    <th>ApartmentID</th>
                    <th>Email</th>
                    <th>Mobile No</th>
                    <th>Actions</th>
                    </tr>
                    
                </thead>
                <tbody>
                    <% users.forEach(function(user){ %>
                        <tr>
                            <td><%= user.id %></td>
                            <td><%= user.name %></td>
                            <td><%= user.apartmentid %></td>
                            <td><%= user.email %></td>
                            <td><%= user.phone %></td>
                            <td>
                                <a href="editofficer/<%= user.id %>" class="btn border-shadow update">
                                    <span class="text-gradient"><i class="fa fa-pencil-alt"></i></span>
                                </a>
                                <a href="deleteofficer/<%= user.id %>" class="btn border-shadow delete">
                                    <span class="text-gradient"><i class="fa fa-times" aria-hidden="true"></i></span>
                                </a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </form>
        <!-- /form handling-->
    </div>
</main>
<!-- /Main -->

<!-- Include Footer -->
<%- include('include/_footer') %>
<!-- /Include Footer -->